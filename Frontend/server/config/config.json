{
  "name": "tut-home-automation-fe",

  "log": {
    "name": "hafe-server",
    "level": "trace"
  },

  "rf": {
    "address": 4
  },

  "serial": {
    "device": "/dev/ttyACM0",
    "options": {
      "baudrate": 9600,
      "dataBits": 8,
      "stopBits": 1,
      "parity": "none"
    },
    "incoming": {
      "timeout": 30
    },
    "outgoing": {
      "timeout": 1000,
      "retry": 3000,
      "retryCount": 3
    }
  },

  "hass": {
    "bufferFile": "data-from-hass.local"
  },

  "mysql": {
    "host": "127.0.0.1",
    "port": 3306,
    "user": "root",
    "pass": "",
    "db": "hafe"
  },

  "crypto": {
    "key": "9nmn2oopmnlgzaor"
  },

  "modules": {
    "_statusDir": "../hass/data/",

    "rfid": {
      "address": 2,
      "statusFiles": {
        "p2.lock": "bool",
        "p2.status": "enum(ok,fault)"
      }
    },

    "outdoor": {
      "address": 3,
      "statusFiles": {
        "p3.temp": "number",
        "p3.humid": "number",
        "p3.pressure": "number",
        "p3.light": "number",
        "p3.battery": "enum(ok,low)"
      },
      "poll": {
        "start": 1000,
        "interval": 60000
      }
    },

    "fishFeeder": {
      "address": 5,
      "statusFiles": {
        "p5.light": "enum(on,off)",
        "p5.water": "enum(ok,low)",
        "p5.feed": "enum(ok,low)",
        "p5.temp": "number",
        "p5.filter": "enum(ok,dirty)"
      },
      "poll": {
        "start": 1500,
        "interval": 60000
      }
    }
  }
}
